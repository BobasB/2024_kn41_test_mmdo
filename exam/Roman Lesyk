import requests

def fetch_website_content(url, save_to_file=False, filename="website_content.html"):
    try:
        # Відправити GET-https://itcollege.lviv.ua/
        response = requests.get(url)
        
        # Перевірити, чи успішно завершився запит
        response.raise_for_status()
        
        # Вивести вміст веб-сторінки
        content = response.text
        
        if save_to_file:
            # Зберегти вміст в файл
            with open(filename, "w", encoding="utf-8") as file:
                file.write(content)
            print(f"Вміст сторінки було збережено в файл {filename}")
        else:
            print(content)
        
    except requests.RequestException as e:
        # Вивести помилку, якщо щось пішло не так
        print(f"Помилка при отриманні вмісту сторінки: {e}")

if __name__ == "__main__":
    url = "https://itcollege.lviv.ua/"
    
    # Запитати користувача, чи потрібно зберегти вміст сторінки в файл
    save_to_file = input("Зберегти вміст сторінки в файл? (yes/no): ").lower() == "yes"
    
    if save_to_file:
        filename = input("Введіть ім'я файлу для збереження (наприклад, website_content.html): ")
        fetch_website_content(url, save_to_file=True, filename=filename)
    else:
        fetch_website_content(url)
